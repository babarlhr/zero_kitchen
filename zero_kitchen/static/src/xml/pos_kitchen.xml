<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">
    <t t-name="KitchenButton">
        <span class="control-button kitchen_button">
            Create Kitchen Order
        </span>
    </t>

    <t t-name="KitchenPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-Kitchen-order">
                <p class="title"><t t-esc=" widget.options.title || 'Create Kitchen Order' " /></p>
                <p class="body">
                    <br/>
                    <br/>
                    <input type="date" name="order_date" class="order_date"/>
                    <br/>
                    <br/>
                    <span class="alert_msg"/>
                    <br/>
                    <textarea rows="3" cols="34" name="order_note" class="form-control order_note"/>

                    <br/>
                </p>
                <div class="footer">
                    <div class="button confirm">
                        Send Kitchen Order
                    </div>
                    <div class="button cancel">
                        Close
                    </div>
                </div>
            </div>
        </div>
    </t>

</template>





